<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录EditText 有左右边距-->
    <style name="login_edit_text" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="met_baseColor">@color/colorPrimaryDark</item>
        <item name="met_clearButton">true</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelPadding">10dp</item>
        <item name="met_floatingLabelTextSize">14sp</item>
        <item name="met_iconPadding">0dp</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="met_textColor">@color/colorPrimaryDark</item>
        <item name="met_textColorHint">@color/colorPrimaryDark</item>
    </style>

</resources>
